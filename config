# 启动一个浮动并默认进入插入模式的vim,方便用来写一些便笺
bindsym $mod+Shift+v exec lxterminal -t I3_FLOAT_WINDOW -e "nvim -c 'let g:startify_disable_at_vimenter = 1' -c 'startinsert' -c 'setlocal buftype=nofile' -c 'setlocal bufhidden=hide' -c 'setlocal noswapfile'"

