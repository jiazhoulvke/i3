# autostart {{{1
# exec表示只有启动i3时会启动
# exec_always表示每次重启i3都会启动

# 需要开机启动的软件
exec --no-startup-id sh ~/.config/i3/scripts/autostart.sh

# gnome密钥环
exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets
#exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=ssh,secrets,gpg,pkcs11
# i3下google-chrome必须增加--password-store=gnome才能保存密码

# 透明
exec_always --no-startup-id picom --experimental-backends -b

# 声音调节
exec --no-startup-id volumeicon

